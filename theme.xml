<?xml version="1.0" encoding="UTF-8"?>
<theme>
   <formatVersion>4</formatVersion>

<!--
Carousel wheel and main menu background
-->


<feature supported="carousel">
   <view name="system">
      <carousel name="systemcarousel">
        <type>vertical</type>
        <pos>0.0 -0.092</pos>
        <logoAlignment>center</logoAlignment>         
        <size>1 1.16</size>
        <logoScale>1.1</logoScale>
        <zIndex>3</zIndex>          
        <logoSize>0.25 0.2</logoSize>
        <color>00000000</color>
        <maxLogoCount>7</maxLogoCount>    
      </carousel>
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>2</zIndex>                 
         <path>./_inc/images/main_bottom.png</path>
      </image>
      <image name="background2" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>4</zIndex>                 
         <path>./_inc/images/main_top.png</path>
      </image>                      
      <text name="systemInfo">     
         <pos>0.0 0.017</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>000000</color>
         <fontPath>./_inc/fonts/GROBOLD.ttf</fontPath>
	     <fontSize>0.022</fontSize>
         <zIndex>5</zIndex>	     
      </text>            
   </view>
</feature>


<!--
On Screen help
-->

   <view name="system">
      <helpsystem name="help">
         <fontPath>./_inc/fonts/GROBOLD.ttf</fontPath>
         <fontSize>0.029</fontSize>     
         <pos>0.21 0.96</pos>      
         <textColor>000000</textColor>
         <iconColor>000000</iconColor>
      </helpsystem>
   </view>  

   <view name="detailed,video">
      <helpsystem name="help">
         <fontPath>./_inc/fonts/GROBOLD.ttf</fontPath>
         <fontSize>0.018</fontSize>     
         <pos>0.015 0.965</pos>      
         <textColor>ffffff</textColor>
         <iconColor>ffffff</iconColor>
      </helpsystem>
   </view> 
   <view name="basic">
      <helpsystem name="help">
         <fontPath>./_inc/fonts/GROBOLD.ttf</fontPath>
         <fontSize>0.018</fontSize>     
         <pos>0.26 0.96</pos>      
         <textColor>ffffff</textColor>
         <iconColor>ffffff</iconColor>
      </helpsystem>
   </view>      
   
<!--
System Gamelist
--> 

   <view name="detailed,video,basic">
      <textlist name="gamelist">      
         <selectorColor>1c1c1c00</selectorColor>                     
         <pos>0.38 0.177</pos>
         <size>0.238 0.73</size>
         <selectedColor>F9F900</selectedColor>
         <primaryColor>000000</primaryColor>
         <secondaryColor>000000</secondaryColor>
         <fontPath>./_inc/fonts/GROBOLD.ttf</fontPath>
         <fontSize>0.03</fontSize>
         <forceUppercase>1</forceUppercase>
         <scrollSound></scrollSound>
         <alignment>left</alignment>
         <zIndex>2</zIndex>                          
      </textlist>
   </view> 
  
   
<!--
System View Backgrounds
-->  
   
   <view name="basic,video,detailed">
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>        
         <path>./_inc/images/main_bottom.png</path>
         <zIndex>1</zIndex>          
